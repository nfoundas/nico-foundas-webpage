---
import Card from '../ui/Card.astro';
import Icon from '../ui/Icon.astro';

export interface Props {
  title: string;
  company: string;
  duration: string;
  description: string;
  technologies: string[];
  achievements?: string[];
  isLeft?: boolean;
  class?: string;
}

const { 
  title,
  company,
  duration,
  description,
  technologies,
  achievements = [],
  isLeft = false,
  class: className = ''
} = Astro.props;
---

<Card class={`experience-card ${isLeft ? 'experience-card--left' : 'experience-card--right'} ${className}`}>
  <div class="experience-header">
    <div class="experience-icon">
      <Icon name="briefcase" size="md" ariaLabel="Experience" />
    </div>
    <div class="experience-meta">
      <h3 class="experience-title">{title}</h3>
      <p class="experience-company">{company}</p>
      <p class="experience-duration">{duration}</p>
    </div>
  </div>
  
  <div class="experience-description">
    <p>{description}</p>
  </div>
  
  {achievements.length > 0 && (
    <div class="experience-achievements">
      <h4 class="achievements-title">Key Achievements</h4>
      <ul class="achievements-list" role="list">
        {achievements.map(achievement => (
          <li class="achievement-item">{achievement}</li>
        ))}
      </ul>
    </div>
  )}
  
  <div class="experience-technologies">
    <h4 class="technologies-title sr-only">Technologies Used</h4>
    <div class="technologies-list">
      {technologies.map(tech => (
        <span class="technology-tag">{tech}</span>
      ))}
    </div>
  </div>
</Card>

<style>
  .experience-card {
    position: relative;
    transition: all 0.3s ease;
    max-width: 500px;
  }
  
  .experience-card--left {
    margin-right: auto;
  }
  
  .experience-card--right {
    margin-left: auto;
  }
  
  .experience-header {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  .experience-icon {
    flex-shrink: 0;
    color: var(--color-primary);
    padding: 0.75rem;
    background: rgba(232, 180, 184, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(232, 180, 184, 0.2);
    height: 100%;
  }
  
  .experience-meta {
    flex: 1;
    min-width: 0;
  }
  
  .experience-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }
  
  .experience-company {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-primary);
    margin: 0 0 0.25rem 0;
  }
  
  .experience-period {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
    font-weight: 500;
  }
  
  .experience-description {
    margin-bottom: 1.5rem;
  }
  
  .experience-description p {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin: 0;
  }
  
  .experience-achievements {
    margin-bottom: 1.5rem;
  }
  
  .achievements-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .achievements-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .achievement-item {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    position: relative;
    padding-left: 1.25rem;
    line-height: 1.5;
  }
  
  .achievement-item::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: bold;
  }
  
  .experience-technologies {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }
  
  .technologies-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .technology-tag {
    background: rgba(232, 180, 184, 0.1);
    color: var(--color-text-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 500;
    border: 1px solid rgba(232, 180, 184, 0.2);
    transition: all 0.2s ease;
  }
  
  .experience-card:hover .technology-tag {
    background: rgba(232, 180, 184, 0.15);
    border-color: rgba(232, 180, 184, 0.3);
  }
  
  .experience-card:hover .experience-icon {
    background: rgba(232, 180, 184, 0.2);
    border-color: rgba(232, 180, 184, 0.4);
    transform: scale(1.05);
  }
  
  /* Timeline connector styles */
  .experience-card::before {
    content: '';
    position: absolute;
    top: 2rem;
    width: 20px;
    height: 20px;
    background: var(--color-primary);
    border: 4px solid var(--color-background);
    border-radius: 50%;
    z-index: 2;
  }
  
  .experience-card--left::before {
    right: -60px;
  }
  
  .experience-card--right::before {
    left: -60px;
  }
  
  /* Responsive adjustments */
  @media (max-width: 767px) {
    .experience-card {
      max-width: none;
      margin: 0 !important;
    }
    
    .experience-card::before {
      left: -30px !important;
      right: auto !important;
    }
    
    .experience-title {
      font-size: 1.125rem;
    }
    
    .technologies-list {
      gap: 0.375rem;
    }
    
    .technology-tag {
      font-size: 0.75rem;
      padding: 0.2rem 0.6rem;
    }
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .experience-card,
    .technology-tag,
    .experience-icon {
      transition: none;
    }
    
    .experience-card:hover .experience-icon {
      transform: none;
    }
  }
  
  /* High contrast mode */
  @media (prefers-contrast: high) {
    .experience-icon {
      background: var(--color-surface);
      border: 2px solid var(--color-primary);
    }
    
    .technology-tag {
      background: var(--color-surface);
      border: 2px solid var(--color-primary);
    }
    
    .experience-card::before {
      border: 4px solid var(--color-background);
      box-shadow: 0 0 0 2px var(--color-primary);
    }
  }
  
  /* Print styles */
  @media print {
    .experience-card {
      break-inside: avoid;
      margin-bottom: 2rem;
    }
    
    .experience-card::before {
      display: none;
    }
  }
</style>
