  stroke="currentColor" 
  viewBox="0 0 24 24" 
  xmlns="http://www.w3.org/2000/svg"
  aria-label={ariaLabel}
  role={ariaLabel ? 'img' : 'presentation'}
>
  <path 
    stroke-linecap="round" 
    stroke-linejoin="round" 
    stroke-width="2" 
    d={iconPath}
  />
</svg>

<style>
  .icon {
    display: inline-block;
