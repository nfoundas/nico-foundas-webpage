---
export interface Props {
  class?: string;
  hover?: boolean;
  padding?: 'sm' | 'md' | 'lg';
}

const { 
  class: className = '',
  hover = true,
  padding = 'md'
} = Astro.props;

const paddingClasses = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = [
  'card',
  hover && 'card-hover',
  paddingClasses[padding],
  className
].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>

<style>
  .card {
    background: var(--color-surface);
    border-radius: 12px;
    box-shadow: 0 4px 6px var(--color-shadow);
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }
  
  .card-hover:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px var(--color-shadow);
  }
  
  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }
    
    .card-hover:hover {
      transform: none;
    }
  }
</style>
